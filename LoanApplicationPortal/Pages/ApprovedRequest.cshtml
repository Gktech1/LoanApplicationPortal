@page
@model LoanApplicationPortal.Pages.ApprovedRequestModel
@{
    ViewData["Title"] = "Approved Loan Applications";
    Layout = "_AdminLayout";
}

<h2>Approved Loan Applications</h2>

<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Name</th>
                <th>Address</th>
                <th>Date of Birth</th>
                <th>Email</th>
                <th>Home Owner</th>
                <th>Loan Request Amount</th>
                <th>Initiated On</th>
                <th>Approved On</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var application in Model.LoanApplications)
            {
                <tr>
                    <td>@application.Name</td>
                    <td>@application.Address</td>
                    <td>@application.DateOfBirth.ToShortDateString()</td>
                    <td>@application.Email</td>
                    <td>@application.HomeOwner</td>
                    <td>NGN @application.LoanRequestAmount.ToString("N2")</td>
                    <td>@application.CreatedAt.ToShortDateString()</td>
                    <td>@application.AdminActionAt?.ToShortDateString()</td>
                </tr>
            }
        </tbody>
    </table>
</div>
